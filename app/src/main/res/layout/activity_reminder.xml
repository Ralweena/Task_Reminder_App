<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5fbf4"
    android:gravity="center"
    android:orientation="vertical"
    app:backgroundTint="@null"
    tools:context=".ReminderActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:background="#119e86"
            android:orientation="vertical"
            app:backgroundTint="@null">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/artifika"
                android:text="Add Reminder Here..."
                android:textColor="#e5fbf4"
                android:textSize="32dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/box"
                android:fontFamily="@font/arima_madurai"
                android:hint="Enter The Task"
                android:paddingLeft="10sp"
                android:textColor="#e5fbf4"
                android:textColorHint="#e5fbf4" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#e5fbf4"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:fontFamily="@font/artifika"
                    android:text="DATE" />

                <Button
                    android:id="@+id/btnTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#e5fbf4"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:fontFamily="@font/artifika"
                    android:text="TIME" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="#e5fbf4"
                android:fontFamily="@font/artifika"
                android:text="SAVE"
                android:textColor="#000"
                android:textSize="20sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>